{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./src/dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"],
  "ts-node": {
    "transpileOnly": true
  }
}
